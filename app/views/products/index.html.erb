<div class="my_info">
  <div>
  <h1>Moja Lodówka</h1>
</div>
  <div>
    <div class="fridge-outline">
      <table>
        <tbody>
          <% @products_fridge.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= link_to 'Zmień', edit_product_path(product) %></td>
              <td><%= link_to 'Zjedzone!', product, method: :delete, data: { confirm: 'Na pewno zjadłeś/aś?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="fridge-leg left"></div>
      <div class="fridge-leg right"></div>
